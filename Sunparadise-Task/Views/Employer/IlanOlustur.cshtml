@{
    Layout = "~/Views/Shared/AfterLoginEmployer.cshtml";
}
<h2>İş ilanı oluştur</h2>

<div class="container">
    <form asp-action="IlanOlustur" asp-controller="Employer" method="post">
        <div class="row mt-4 mb-4">
            <div class="col-6">
                <h3>İlan başlığını giriniz:</h3>
                <input type="text" name="Baslik" class="form-control" />
                <hr />
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-6">
                <h3>İşin içeriğini giriniz:</h3>
                <textarea name="Icerik" class="form-control"></textarea>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6 mt-2 mb-4">
                <h3>Çalışma türünü seçiniz:</h3>
                <select name="CalismaTuru" class="form-control">
                    <option>Uzaktan</option>
                    <option>Yüzyüze</option>
                    <option>Hybrit</option>
                </select>
            </div>
        </div>
        <button class="btn btn-success">Yayınla</button>
    </form>
</div>