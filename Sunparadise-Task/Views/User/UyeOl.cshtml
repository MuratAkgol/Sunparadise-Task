@{
    Layout = null;
}
<style>
    body {
        background-image: url(/img/isim.png);
        /*background-size: cover;*/
    }

    #ortada {
        margin-top: 10%;
    }

    b, p {
        color: #4caf50;
    }

    #border {
        background: rgb(2,0,36);
        background: linear-gradient(149deg, rgba(2,0,36,1) 0%, rgba(56,56,190,1) 70%, rgba(0,212,255,1) 94%, rgba(9,83,98,1) 94%);
        border-radius: 10%;
        transition: 1s;
    }

</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/9ca6a37d83.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container w-25" id="ortada">
        <form asp-action="UyeOl" asp-controller="User" method="post">
            <div id="border">

                <div class="row align-items-center">
                    <!--Giriş yap-->
                    <div class="col">
                    </div>
                    <div class="col mt-4">
                        <h4><b>Üye ol</b></h4>
                    </div>
                    <div class="col">
                    </div>
                </div>
                <div class="row align-items-center pt-5">
                    <!--Kullanıcı adı-->
                    <div class="col">
                    </div>
                    <div class="col">
                        <p><b>İsim</b></p>
                        <div class="input-group mb-3">
                            <input type="text" name="Isim" class="form-control" placeholder="" aria-label="Isim" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="col">
                    </div>
                </div>
                <div class="row align-items-center">
                    <!--Kullanıcı adı-->
                    <div class="col">
                    </div>
                    <div class="col">
                        <p><b>Soy isim</b></p>
                        <div class="input-group mb-3">
                            <input type="text" name="SoyAd" class="form-control" placeholder="" aria-label="SoyAd" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="col">
                    </div>
                </div>
                <div class="row align-items-center">
                    <!--email-->
                    <div class="col">
                    </div>
                    <div class="col">
                        <p><b>Eposta</b></p>
                        <div class="input-group mb-3">
                            <input type="email" name="Email" class="form-control" placeholder="" aria-label="Email" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="col">
                    </div>
                </div>
                <div class="row align-items-center">
                    <!--Şifre-->
                    <div class="col">
                    </div>
                    <div class="col">
                        <p><b>Şifre</b></p>
                        <div class="input-group mb-3">
                            <input type="password" name="Sifre" class="form-control" placeholder="" aria-label="Sifre" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="col">
                    </div>
                </div>
                <div class="row align-items-center">
                    <!--Butonlar-->
                    <div class="col text-center">
                        <button class="btn btn-primary mb-4" id="giris" onmouseover="degismisid()" onmouseout="normalid()">Üye ol </button>
                    </div>
                </div>
            </div>
        </form>
    </div>


</body>
</html>